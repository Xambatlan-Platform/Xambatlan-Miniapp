{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@xambitlan/types": ["./packages/types/src"],
      "@xambitlan/ui": ["./packages/ui/src"],
      "@xambitlan/shared": ["./packages/shared/src"],
      "@xambitlan/contracts": ["./packages/contracts/typechain"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "**/dist", "**/.next"]
}